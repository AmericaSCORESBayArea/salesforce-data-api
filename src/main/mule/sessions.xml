					doc:name="Create Response"
					doc:id="6779c4d0-a8dc-4e33-befa-a4b77df09562">
					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  SessionId: payload.items[0].id
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</otherwise>
		</choice>
		<logger
			level="INFO"
			doc:name="Log Created Response"
			doc:id="640a58eb-a8ab-40f9-bcc2-a9cadcf86bb5"
			message="#[payload]" />
		<flow-ref
			doc:name="exit flow"
			doc:id="ffed222e-011b-42f6-a9a1-f3cb065c6e44"
			name="exit-flow" />
