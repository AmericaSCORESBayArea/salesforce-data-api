            <ee:variables>
                <ee:set-variable variableName="assessmentId">attributes.uriParams.'assessmentId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform>
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
                        output application/json
                        ---
                        {message: "Assessment updated"}]]>
                </ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
